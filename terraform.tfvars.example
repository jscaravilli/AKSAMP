# ===============================================================================
# Example Terraform Variables File
# ===============================================================================
# Copy this file to terraform.tfvars and customize for your environment
# cp terraform.tfvars.example terraform.tfvars

# ===============================================================================
# Basic Configuration
# ===============================================================================

prefix   = "demo-aks"
location = "eastus2"

tags = {
  Environment = "Demo"
  Project     = "AKS-Prometheus-Example"
  Owner       = "DevOps-Team"
  Purpose     = "Learning"
}

# ===============================================================================
# Network Configuration
