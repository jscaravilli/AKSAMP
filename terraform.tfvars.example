# node_vm_size       = "Standard_D2s_v3"
# node_min_count     = 2
# node_max_count     = 5
# node_os_disk_size_gb = 128  # Minimum 128GB recommended for ama-metrics

# Kubernetes Service Configuration
# aks_service_cidr   = "10.2.0.0/16"
# aks_dns_service_ip = "10.2.0.10"

# ===============================================================================
# Monitoring Configuration
# ===============================================================================

# log_analytics_sku             = "PerGB2018"
# log_analytics_retention_days  = 30
# ampls_ingestion_access_mode   = "PrivateOnly"  # PrivateOnly or Open
# ampls_query_access_mode       = "PrivateOnly"  # PrivateOnly or Open

# ===============================================================================
# VM Configuration
# ===============================================================================

# vm_admin_username  = "azureuser"
# vm_admin_password  = "P@ssw0rd1234!"  # Change this in production!
# vm_size            = "Standard_D2s_v3"
# vm_os_disk_size_gb = 128

# ===============================================================================
# Bastion Configuration (costs ~$140/month)
# ===============================================================================

# enable_bastion = true   # Set to false to disable Bastion and save costs
# bastion_sku    = "Basic"  # Basic or Standard

# ===============================================================================
# Notes
# ===============================================================================
# 
# - All values shown are defaults from variables.tf
# - Uncomment and modify any value you want to change
# - Private cluster requires Standard or Premium SKU
