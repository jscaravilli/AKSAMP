# vnet_address_space                     = ["10.1.0.0/16"]
# aks_subnet_address_prefix              = "10.1.1.0/24"
# private_endpoint_subnet_address_prefix = "10.1.2.0/24"
# vm_subnet_address_prefix               = "10.1.3.0/24"
# bastion_subnet_address_prefix          = "10.1.4.0/26"

# ===============================================================================
# AKS Configuration
# ===============================================================================

# kubernetes_version = "1.31"
